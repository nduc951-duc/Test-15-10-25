{{#fillContent 'css'}}
<link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
{{/fillContent}}

{{#fillContent 'js'}}
<script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
<script>
         const quill = new Quill('#editor', {
    theme: 'snow'
    });

    document.querySelector('#frmCreate').addEventListener('submit', function(e) {
        document.querySelector('#content').value = quill.root.innerHTML;
    });
</script>
{{/fillContent}}



<div class="card">
    <div class="card-header">
        <h5>Tạo bài viết mới</h5>
    </div>
    <div class="card-body">
        <form action="/articles/create" id="frmCreate" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Tiêu đề</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Tác giả</label>
                <input type="text" class="form-control" id="author" name="author" required>
            </div>
            <div class="mb-3">
                <label for="abstract" class="form-label">Tóm tắt</label>
                <textarea class="form-control" id="abstract" name="abstract" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Nội dung</label>
                <div id="editor" style="height: 250px;"></div>
                <input type="hidden" id="content" name="content">
            </div>
            <div class="mb-3">
                <label for="category_id" class="form-label">Chuyên mục</label>
                <select class="form-select" id="category_id" name="category_id" required>
                    {{#each categories}}
                    <option value="{{id}}">{{category_name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="is_premium" name="is_premium">
                <label class="form-check-label" for="is_premium">Bài viết Premium</label>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-secondary" href="/articles" role="button">
                <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                <i class="bi bi-check"></i> Lưu
                </button>
            </div>
        </form>
    </div>
    <div class="card-footer text-muted">Footer</div>
</div>
