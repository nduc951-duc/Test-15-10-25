<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5> Danh sách bài viết</h5>
        <a href="/articles/create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>
    <div class="card-body">
        <div table class="table-hover">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tiêu đề</th>
                        <th>Tác giả</th>
                        <th>Tóm tắt</th>
                        <th>Chuyên mục</th>
                        <th>Premium</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each articles}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{author}}</td>
                        <td>{{abstract}}</td>
                        <td>{{category_name}}</td>
                        <td>{{#if isPremium}}Yes{{else}}No{{/if }}</td>
                        <td class = "text-end">
                            <a href="/articles/detail?id={{id}}" class="btn btn-outline-primary btn-sm">Xem</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>
