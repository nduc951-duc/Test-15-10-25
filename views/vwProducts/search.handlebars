<div class="card">
<div class="card-header"> <h5>Search results for: {{q}}</h5></div>
    <div class="card-body">
        {{#if empty}}
        <div class = "row">
            <div class = "col">
                <p> Không có sản phẩm thoả mãn tiêu chí tìm kiếm </p>
            </div>
        </div>
        {{else}}
            <div class="row row-gap-3">
                        {{#each products}}
                        <div class="col-md-6">
                            <div class="card">
                                <img src="/static/imgs/sp/{{proid}}/main_thumbs.jpg" class="card-img-top" alt="{{proname}}">
                                <div class="card-body">
                                    <h4 class="card-title">{{proname}}</h4>
                                    <h4 class="card-title text-danger">{{format_number price}}</h4>
                                    <p class="card-text">{{tinydes}}</p>
                                    <a href="/products/details?id={{proid}}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                    View details
                                    </a>
                                    <a href="#" class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-card-plus"></i>
                                    Add to cart
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
            </div>
            <nav aria-label="..." class="mt-3 d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item disabled">
                <span class="page-link">Previous</span>
                </li>
                {{#each pages}} 
                {{#if isCurrent}}
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="javascript:void(0)"> 
                    {{value}}
                </a>
                </li>
                {{else}}
                <li class="page-item">
                    <a class="page-link" href="?id={{catid}}&page={{value}}"> 
                    {{value}}
                </a>
                </li>
                {{/if}}
                {{/each}}
                <a class="page-link" href="#">Next</a>
                </li>
            </ul>
            </nav>
        {{/if}}
        
    </div>
    <div class="card-footer text-muted">Footer</div>
</div>
