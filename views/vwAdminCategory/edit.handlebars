<form id="frmEditCategory" method="post" action="/admin/categories/edit">
<div class="card">
    <div class="card-header">Edit Category</div>
    <div class="card-body">
                      <div class="mb-3">
                        <label for="txtCatId" class="form-label">Category ID</label>
                        <input type="text" class="form-control" id="txtCatId" name="catid" readonly value="{{category.catid}}">
                      </div>
                       <div class="mb-3">
                        <label for="txtCatName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="txtCatName" name="catname" autofocus value="{{category.catname}}" required>
                      </div>

    </div>
    <div class="card-footer text-muted">
        <a
            class="btn btn-outline-success"
            href="/admin/categories"
            role="button"
            >
            <i class="bi bi-arrow-left"></i>      
                  Back
         </a>
         <button type="submit" class="btn btn-danger" formaction="/admin/categories/delete">  
            <i class="bi bi-trash"></i>
                Remove
        </button>   
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check"></i>
                Save
        </button>     
    </div>
</div>
</form>