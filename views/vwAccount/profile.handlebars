<form action="/account/profile" method="post">
  <div class="card">
    <div class="card-header">Profile</div>
    <div class="card-body">
      
      <div class="mb-3">
        <label for="txtId" class="form-label">#</label>
        <input type="text" id="txtId" name="id" class="form-control" value="{{user.id}}" readonly />
      </div>  

      <div class="mb-3">
        <label for="txtName" class="form-label">Name</label>
        <input type="text" id="txtName" name="name" class="form-control" value="{{user.name}}" />
      </div>

      <div class="mb-3">
        <label for="txtEmail" class="form-label">Email</label>
        <input type="text" id="txtEmail" name="email" class="form-control" value="{{user.email}}" />
      </div>
    </div>

    <div class="card-footer text-muted">
      <button type="submit" class="btn btn-outline-success">
        <i class="bi bi-save"></i> Save
      </button>
    </div>
  </div>
</form>
